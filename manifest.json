{
    "name": "Tatoeba Pronunciation Trainer",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "Train your pronunciation in your target language using Tatoeba's vast audio sentence library.",
    "content_scripts": [
        {
            "matches": ["https://tatoeba.org/en/sentences/*"],
            "js": ["content/content.js"]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icon/icon16.png",
        "32": "icon/icon32.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    }
}
